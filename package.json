{
  "name": "hauki-admin-ui",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/cypress": "^1.1.3",
    "@types/cypress-axe": "^0.8.0",
    "@types/enzyme": "^3.10.6",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.14",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "axios": "^0.20.0",
    "cypress-axe": "^0.8.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint-config-airbnb-typescript-prettier": "^3.1.0",
    "hds-core": "^0.13.2",
    "hds-design-tokens": "^0.13.2",
    "hds-react": "^0.13.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-axe": "^3.5.3",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "react-test-renderer": "^16.13.1"
  },
  "scripts": {
    "start": "API_URL=${API_URL:=http://localhost:8080} USE_AXE=${USE_AXE:=true} ./scripts/env.sh && cp env-config.js ./public/ && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test-cypress": "start-server-and-test start http://localhost:3000 cypress-run-chrome",
    "test-cypress-headless": "start-server-and-test start http://localhost:3000 cypress-run-chrome-headless",
    "test-cypress-test-env": "CYPRESS_BASE_URL=https://hauki-admin-ui.dev.hel.ninja yarn cypress-run-chrome-headless",
    "eject": "react-scripts eject",
    "ts-check": "tsc --noEmit --project tsconfig.json",
    "ts-check:cypress": "tsc --noEmit --project ./cypress/tsconfig.json",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint": "yarn lint:css && yarn ts-check:cypress && yarn ts-check && eslint --ext js,ts,tsx src cypress",
    "cypress-open": "cypress open",
    "cypress-run-chrome": "cypress run --browser chrome",
    "cypress-run-chrome-headless": "cypress run --headless --browser chrome"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!hds-react)/"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "cypress": "^5.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "start-server-and-test": "^1.11.3",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-value-no-unknown-custom-properties": "^3.0.0",
    "typescript": "^3.7.5"
  }
}
